.header_main
  margin-bottom 90px
        
  &_img
    font-size: 0

    img
      width: 100%
      object-fit: contain

  &_footer
    display: flex
    justify-content: space-between
    align-items: center
    height: 70px

    &_wrapper
      background: main-color_3

  &_logo
    min-width: 100px
    display: flex
    align-items: center

    .main_logo_img
      display: flex
      justify-content: center
      align-items: center
      background-color: #4b5456;
      width: 42px;
      height: 42px;
      margin-right: 20px;

    .main_logo_text
      color main_color_1
      text-transform: uppercase
      font-family: Roboto;
      font-size: 1.875em;/* Приближение из-за подстановки шрифтов */
      font-weight: 700;
      line-height: 1.4;/* Приближение из-за подстановки шрифтов */
      text-align: center;

      span 
        color main-color_2
        text-transform: uppercase

      & span img 
        margin: 0 auto;

  &_nav
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 800px;

    ul
      display: flex
      align-items: center
      list-style: none
      margin: 0
      justify-content space-around 
      width: 100%
      padding: 0

      a
        text-transform: uppercase
        text-decoration: none;
        color: main_color_1
        font-family: Roboto;
        font-size: 1em; /* Приближение из-за подстановки шрифтов */
        font-weight: 700;
        line-height: 1.875; /* Приближение из-за подстановки шрифтов */
        text-align: left;

      a:hover
        color main-color_2
