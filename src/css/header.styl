.header_main
  margin-bottom 90px
  position relative

  .button_controller
    position: absolute
    display: flex
    height 50px
    flex-direction: column
    justify-content: space-between
    align-items: center
    left: 1360px
    top 890px


    .slide_controller
      border-radius: 50%;
      border-style: solid;
      border-width: 2px;
      border-color: #ffffff;
      box-sizing: border-box;
      background-color: rgba(255, 255, 255, 0);
      width: 11px;
      height: 11px;
    
      &.active
        background: #ffffff;
        
  &_slider
    
        
    &_slide
      display: none
      justify-content: center
      flex-direction: column
      align-items: center
      height 1000px
      background-repeat: no-repeat
      background-position: 50% 50%
      background-clip: border-box
      
      &.active
        display: flex
        animation: eye 3s ease-in-out

      @-moz-keyframes .header_main_slider_slide .active {
        0% {
          opacity: 0;
        }
        20% {
          opacity: 0.2;
        }
        40% {
          opacity: 0.4;
        }
        60% {
          opacity: 0.6;
        }
        80% {
          opacity: 0.8;
        }
        100% {
          opacity: 1;
        }
      }      
              
      
      &_title
        height: 80px;
        margin-bottom: 50px;
        border-top: 2px solid white;
        border-bottom: 2px solid white;
        display: flex;
        align-items: center;
        justify-content: center;
      
        h1
          font-family: Roboto;
          color: #ffffff;
          font-size: 3.75em; /* Приближение из-за подстановки шрифтов */
          font-weight: 700;
          line-height: 0.4; /* Приближение из-за подстановки шрифтов */
          text-align: center;
          text-transform: uppercase
      
      &_button
        border-style: solid;
        border-width: 2px;
        border-color: #ffffff;
        box-sizing: border-box;
        background-color: rgba(255, 255, 255, 0);
        width: 185px;
        height: 56px;
        font-family: Roboto;
        color: #ffffff;
        font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
        font-weight: 700;
        line-height: 1.333; /* Приближение из-за подстановки шрифтов */
        text-align: center;
        text-transform: uppercase

  &_footer
    display: flex
    justify-content: space-between
    align-items: center
    height: 70px

    &_wrapper
      background: main-color_3

  &_logo
    min-width: 100px
    display: flex
    align-items: center

    .main_logo_img
      display: flex
      justify-content: center
      align-items: center
      background-color: #4b5456;
      width: 42px;
      height: 42px;
      margin-right: 20px;

    .main_logo_text
      color main_color_1
      text-transform: uppercase
      font-family: Roboto;
      font-size: 1.875em;/* Приближение из-за подстановки шрифтов */
      font-weight: 700;
      line-height: 1.4;/* Приближение из-за подстановки шрифтов */
      text-align: center;

      span 
        color main-color_2
        text-transform: uppercase

      & span img 
        margin: 0 auto;

  &_nav
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 800px;

    ul
      display: flex
      align-items: center
      list-style: none
      margin: 0
      justify-content space-around 
      width: 100%
      padding: 0

      a
        text-transform: uppercase
        text-decoration: none;
        color: main_color_1
        font-family: Roboto;
        font-size: 1em; /* Приближение из-за подстановки шрифтов */
        font-weight: 700;
        line-height: 1.875; /* Приближение из-за подстановки шрифтов */
        text-align: left;

      a:hover
        color main-color_2
