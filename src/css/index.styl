main_color_1 = white
main-color_2 = #2ecc71
main-color_3 = #252e30

@font-face
  font-family: 'Roboto', 'sans-serif'
  src: 'https://fonts.googleapis.com/css?family=Roboto:400,500,700'


.header_main
  margin 0 auto
  min-width 800px
  max-width 1600px
        
.header_main_img
  margin 0
  padding: 0
  width: 100%;
  box-sizing: border-box
  font-size: 0

  img
    margin: 0
    width: 100%;
    object-fit: contain

.header_main_footer
  width: 100%;
  display: flex;
  background: main-color_3
  height: 70px;
  justify-content: space-evenly;

.header_main_logo
  min-width: 100px
  display: flex
  align-items: center

.main_logo
  display: flex
  justify-content: center
  align-items: center
  background-color: #4b5456;
  width: 42px;
  height: 42px;
  margin-right: 20px;

.main_logo_text
  color main_color_1
  text-transform: uppercase
  font-family: Roboto;
  font-size: 1.875em;/* Приближение из-за подстановки шрифтов */
  font-weight: 700;
  line-height: 1.4;/* Приближение из-за подстановки шрифтов */
  text-align: center;

  span 
    color main-color_2
    text-transform: uppercase

.main_logo span img 
  margin: 0 auto;

.header_main_nav
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 800px;

  a
    text-transform: uppercase
    text-decoration: none;
    color: main_color_1
    font-family: Roboto;
    font-size: 1em; /* Приближение из-за подстановки шрифтов */
    font-weight: 700;
    line-height: 1.875; /* Приближение из-за подстановки шрифтов */
    text-align: left;

  a:hover
    color main-color_2

  ul
    display: flex
    align-items: center
    list-style: none
    margin: 0
    justify-content space-around 
    width: 100%
    padding: 0

.interests
  display: flex
  margin 0 auto
  min-width 800px
  max-width 1600px
  background: #ffffff
  justify-content: space-evenly

.interest_item
  min-width 200px
  max-width 360px

  h2
    margin-top: 100px
    margin-bottom: 50px;
    font-family: Roboto;
    color: #556366;
    font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
    font-weight: 700;
    line-height: 0.8; /* Приближение из-за подстановки шрифтов */
    text-align: left;
    text-transform: uppercase

  p
    margin 0
    margin-bottom: 96px
    font-family: Roboto;
    color: #919191;
    font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
    font-weight: 400;
    line-height: 1.667; /* Приближение из-за подстановки шрифтов */
    text-align: left;

.about
  display: flex
  margin 0 auto
  min-width 800px
  max-width 1600px
  background: #f2f2f1
  justify-content: space-evenly