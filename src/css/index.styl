main_color_1 = white
main-color_2 = #2ecc71
main-color_3 = #252e30

@font-face
    font-family: 'Roboto', 'sans-serif'
    src: 'https://fonts.googleapis.com/css?family=Roboto:400,500,700'


.header_main
    margin 0 auto
    min-width 800px
    max-width 1600px
        
.header_main_img
    margin 0
    padding: 0
    width: 100%;
    box-sizing: border-box

.header_main_img img
    margin: 0
    width: 100%;
    object-fit: contain

.header_main_footer
    width: 100%;
    display: flex;
    background: main-color_3
    height: 70px;
    justify-content: space-evenly;

.header_main_logo
    min-width: 100px
    display: flex
    align-items: center

.main_logo
    display: flex
    justify-content: center
    align-items: center
    background-color: #4b5456;
    width: 42px;
    height: 42px;
    margin-right: 20px;

.main_logo_text
    color main_color_1
    text-transform: uppercase
    font-family: Roboto;
    font-size: 1.875em;/* Приближение из-за подстановки шрифтов */
    font-weight: 700;
    line-height: 1.4;/* Приближение из-за подстановки шрифтов */
    text-align: center;

.main_logo_text span 
    color main-color_2
    text-transform: uppercase

.main_logo span img 
    margin: 0 auto;

.header_main_nav
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 800px;

.header_main_nav a
    text-transform: uppercase
    text-decoration: none;
    color: main_color_1
    font-family: Roboto;
    font-size: 1em; /* Приближение из-за подстановки шрифтов */
    font-weight: 700;
    line-height: 1.875; /* Приближение из-за подстановки шрифтов */
    text-align: left;

.header_main_nav a:hover
    color main-color_2

.header_main_nav ul
    display: flex
    align-items: center
    list-style: none
    margin: 0
    justify-content space-around 
    width: 100%
    padding: 0