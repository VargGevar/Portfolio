.portfolio
  background-color: #ffffff;

  &_item
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 100px
    padding-bottom: 100px

    h2
      font-family: Roboto;
      color: #556366;
      font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
      font-weight: 700;
      line-height: 0.8; /* Приближение из-за подстановки шрифтов */
      text-align: center;
      text-transform: uppercase
      margin: 0
      margin-bottom: 45px

    p
      font-family: Roboto;
      color: #919191;
      font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
      font-weight: 400;
      line-height: 1.667; /* Приближение из-за подстановки шрифтов */
      text-align: center;
      width: 1020px
      margin: 0
      margin-bottom: 95px

    &_content
      width: 100%
      display: flex
      flex-wrap: wrap
      justify-content: space-between
      align-items: center

      img
        margin-bottom: 40px
      
      img:nth-child(n+7):nth-child(-n+9)
        margin-bottom: 0

.modal
  display: flex
  justify-content: center
  align-items: center
  position fixed
  top 0
  left 0
  right 0
  bottom: 0
  
  .background
    position absolute
    top 0
    left 0
    right 0
    bottom: 0
    background: rgba(0,0,0,0.7)

  .content
    position relative
    width: 500px
    height 400px
    background: #ffffff
    

.hidden
  display none


