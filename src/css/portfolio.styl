.portfolio
  background-color: #ffffff;

  &_item
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 100px
    padding-bottom: 100px

    h2
      font-family: Roboto;
      color: #556366;
      font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
      font-weight: 700;
      line-height: 0.8; /* Приближение из-за подстановки шрифтов */
      text-align: center;
      text-transform: uppercase
      margin: 0
      margin-bottom: 45px

    p
      font-family: Roboto;
      color: #919191;
      font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
      font-weight: 400;
      line-height: 1.667; /* Приближение из-за подстановки шрифтов */
      text-align: center;
      width: 1020px
      margin: 0
      margin-bottom: 95px

    &_content
      width: 100%
      display: flex
      flex-wrap: wrap
      justify-content: space-between
      align-items: center

      img
        margin-bottom: 40px
      
      img:nth-child(n+7):nth-child(-n+9)
        margin-bottom: 0


