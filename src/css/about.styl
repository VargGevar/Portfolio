.about
  display: flex
  background: #f2f2f1
  justify-content: space-evenly
  
.about_img
  margin 0
  padding: 0
  width: 100%
  box-sizing: border-box
  font-size: 0
  flex-shrink: 1.3

  img
    margin: 0
    width: 100%;
    object-fit: contain

.about_items
  max-width: 700px;
  padding: 100px 200px 100px 100px;
  flex-grow: 3;

  h2
    margin: 0
    margin-bottom: 45px;
    font-family: Roboto;
    color: #556366;
    font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
    font-weight: 700;
    line-height: 0.8; /* Приближение из-за подстановки шрифтов */
    text-align: left;
    text-transform: uppercase
  
  p
    margin: 0
    margin-bottom: 25px
    font-family: Roboto;
    color: #919191;
    font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
    font-weight: 400;
    line-height: 1.667; /* Приближение из-за подстановки шрифтов */
    text-align: left;
  
  .about_article p:last-child
    margin-bottom: 0
 
.about_skills
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between
    align-items: flex-start
  
.about_skills_item_article h3
  margin: 0
  margin-bottom: 20px
  font-family: Roboto;
  color: #556366;
  font-size: 1.375em; /* Приближение из-за подстановки шрифтов */
  font-weight: 700;
  line-height: 1.091; /* Приближение из-за подстановки шрифтов */
  text-align: left;
  text-transform: uppercase

.about_skills_item_article p
  margin: 0
  font-family: Roboto;
  color: #919191;
  font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
  font-weight: 400;
  line-height: 1.667; /* Приближение из-за подстановки шрифтов */
  text-align: left;

.about_skills_item
  display: flex
  justify-content: space-between
  align-items: flex-start
  margin: 0
  min-width 200px
  max-width: 320px
  margin-top: 45px

.about_skills_item_article
  margin-left: 30px;