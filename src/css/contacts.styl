.contacts
  background-color: #252e30;

  &_item
    display: flex
    align-items: flex-start
    padding-top: 100px
    padding-bottom: 100px
    justify-content: space-between

    &_content
      display: flex
      flex-direction: column
      justify-content: flex-start
      width: 550px

      h2
        font-family: Roboto;
        color: #ffffff;
        font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
        font-weight: 700;
        line-height: 0.8; /* Приближение из-за подстановки шрифтов */
        text-align: left;
        text-transform: uppercase
        margin: 0
        margin-bottom: 45px

      p
        font-family: Roboto;
        color: #919191;
        font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
        font-weight: 400;
        line-height: 1.667;/* Приближение из-за подстановки шрифтов */
        text-align: left;
        margin: 0
        margin-bottom: 45px

      .contacts_item_content_span
        font-family: Roboto;
        color: #ffffff;
        font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
        font-weight: 400;
        line-height: 1.667;/* Приближение из-за подстановки шрифтов */
        text-align: left;
        margin 0
        
        span 
          font-family: Roboto;
          color: #919191;
          font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
          font-weight: 400;
          line-height: 1.667;/* Приближение из-за подстановки шрифтов */
          text-align: left;
  
    &_inputs
      display: flex
      flex-direction: column
      justify-content: flex-start
      width: 550px
      padding-top: 30px;

      label
        font-family: Roboto;
        color: #ffffff;
        font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
        font-weight: 400;
        line-height: 1.667;/* Приближение из-за подстановки шрифтов */
        text-align: left;
        margin-bottom: 15px

        span 
          font-family: Roboto;
          color: #919191;
          font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
          font-weight: 400;
          line-height: 1.667;/* Приближение из-за подстановки шрифтов */
          text-align: left;

      input
        background-color: #4b5456;
        height: 56px;
        border: none
        margin-bottom: 35px

      textarea
        background-color: #4b5456;
        height: 279px;
        border: none
        margin-bottom: 35px

      &_button
        background-color: #191f21;
        width: 185px;
        height: 56px;
        font-family: Roboto;
        color: #ffffff;
        font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
        font-weight: 700;
        line-height: 1.333; /* Приближение из-за подстановки шрифтов */
        text-align: center;
        text-transform: uppercase
        border: none

      &_button:hover
        color: main-color_2

