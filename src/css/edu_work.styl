.edu_work
  background-color: #ffffff;

  &_item
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 80px
    padding-bottom: 100px

    &_education
      display: flex
      justify-content: space-between
      width: 100%
      padding-bottom: 90px
      margin-bottom: 90px
      border-bottom: 1px solid #cccccc

      &_header
        display: flex
        flex-direction: column
        align-items: flex-start
        max-width: 550px

        h2
          font-family: Roboto;
          color: #556366;
          font-size: 1.875em; /* Приближение из-за подстановки шрифтов */
          font-weight: 700;
          line-height: 0.8; /* Приближение из-за подстановки шрифтов */
          text-align: left;
          text-transform: uppercase
          margin: 0 0 45px 0

        p
          font-family: Roboto;
          color: #919191;
          font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
          font-weight: 400;
          line-height: 1.667; /* Приближение из-за подстановки шрифтов */
          text-align: left;
          margin: 0 0 45px 0

      &_content
        display flex
        flex-direction: column
        align-items: flex-start
        max-width: 550px

        &_item
          display flex
          flex-direction: column
          margin: 0
          padding-top: 70px

          &_header
            display flex
            flex-direction: column
            border-bottom: 1px solid #cccccc;
            padding-bottom: 30px
            margin-bottom: 20px

            h3
              font-family: Roboto;
              color: #556366;
              font-size: 1.375em; /* Приближение из-за подстановки шрифтов */
              font-weight: 700;
              line-height: 1.091; /* Приближение из-за подстановки шрифтов */
              text-align: left;
              text-transform: uppercase
              margin: 0 0 5px 0

            p
              font-family: Roboto;
              color: #919191;
              font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
              font-weight: 500;
              line-height: 1.667;/* Приближение из-за подстановки шрифтов */
              text-align: left;
              margin: 0
              margin-bottom: 10px
              
              span
                font-family: Roboto;
                color: #919191;
                font-size: 1.125em;/* Приближение из-за подстановки шрифтов */
                font-weight: 400;
                line-height: 1.667;/* Приближение из-за подстановки шрифтов */
                text-align: left;

            .grade
              font-family: Roboto;
              color: #ffffff;
              font-size: 0.875em; /* Приближение из-за подстановки шрифтов */
              font-weight: 700;
              text-align: center;
              background-color: #2ecc71;
              width: 71px
              padding: 5px 0 5px 0
              
              
          &_footer
            font-family: Roboto;
            color: #919191;
            font-size: 1.125em; /* Приближение из-за подстановки шрифтов */
            font-weight: 400;
            line-height: 1.667; /* Приближение из-за подстановки шрифтов */
            text-align: left;
            margin: 0

  .edu_work_item article:last-child
      border-bottom: none
      padding-bottom: 0;
      margin-bottom: 0;




